{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "declaration": true,
      "declarationMap": true,
      "sourceMap": false,
      "jsx": "react",
      "outDir": "./dist",
      "rootDir": "./src",
      "baseUrl": "./",
      "paths": {
        "@atomic/*": ["./src/*"],
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  